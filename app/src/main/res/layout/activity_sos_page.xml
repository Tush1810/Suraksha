<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".sosPage">



    <Button
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/sosButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:background="@drawable/mainpage_background"
        android:text="SOS"
        android:textColor="@color/colorPrimary"
        android:textSize="70sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emergencyText"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/sosButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginRight="40dp"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:inputType="textVisiblePassword"
        android:padding="10dp"
        android:hint="Enter your Emergency message here"
        android:drawablePadding="20dp"
        android:textColor="#367CF6"
        android:textColorHint="#303C50"
        android:drawableLeft="@drawable/ic_baseline_textsms_24"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/settingsButton"
        android:onClick="openSettings"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/contact_button_background"
        android:src="@drawable/ic_baseline_settings_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>